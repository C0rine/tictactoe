<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:id="@+id/linearLayout"
    android:background="@drawable/patternbg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:fontFamily="Monaco"
        android:padding="20dp"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:typeface="monospace" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/grid">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="onClickButton1"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true"
            android:onClick="onClickButton2"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:clickable="true"
            android:onClick="onClickButton3"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="onClickButton4"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true"
            android:onClick="onClickButton5"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:clickable="true"
            android:onClick="onClickButton6"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="onClickButton7"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:clickable="true"
            android:onClick="onClickButton8"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testdollar"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:clickable="true"
            android:onClick="onClickButton9"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:textSize="70sp"
            android:layout_margin="10dp"/>
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/new_game"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onStartNewGame"
        android:background="#a8ffffff"
        android:padding="5dp"
        android:textStyle="italic" />


</LinearLayout>
